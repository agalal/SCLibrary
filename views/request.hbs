<div id="behind-vid"></div>
<div id="video-div"></div>

<div class="container">
	<div class="row full-center">
			<div class="col-md-6" id="request-panel">
					<div class="login-panel panel panel-default login-panel">
							<div class="panel-heading text-center">
									<h3 class="panel-title">Request Account</h3>
							</div>
							<div class="panel-body">
								<div class="banner">
									{{#if msg}}
										{{msg}}
									{{/if}}
								</div>
								<form action="/request/submit" method="post" class="simple-form">
												<div class="form-group">
														<input class="form-control" placeholder="Name" name="name" type="text" autofocus>
												</div>
												<div class="form-group">
														<input class="form-control" placeholder="Email" name="email" type="email" value="">
												</div>
												<div class="form-group">
														<input class="form-control" placeholder="Soundcloud Username" name="sc_account" type="text" value="">
														<span>ex) http://soundcloud.com/skrillex, the username would be skrillex</span>
												</div>
												<hr>
												<div class="form-group">
														<input class="form-control" placeholder="Password" name="password" type="password" value="">
												</div>
												<div class="form-group">
														<input class="form-control" placeholder="Confirm Password" type="password" value="">
												</div>

												<button type="submit" value="Submit" class="btn btn-success btn-block">Submit</button>
												<hr>
												<a href="/login/" class="btn btn-success btn-block">Login</a>
									</form>
							</div>
					</div>
			</div>
	</div>
</div>


<script src="/bower_components/basket-css-example/lib/create-stylesheet.unwrapped-0.2.1.js"></script>
<script src="/bower_components/basket.js/dist/basket.full.min.js"></script>

<script type="text/javascript">
// req css function
var requireCSS =  function(responses) {
		var css = responses[0].data;
		_stylesheet.appendStyleSheet(css, function(err, style) {
				if (err) {
						console.error(err);
				} else {
				}
		});
}


// CSS includes
	var maincss = {
			url:"/stylesheets/sclibrary.min.css",
			execute: false
		},

		bs = {
			url:"/bower_components/bootstrap/dist/css/bootstrap.min.css",
			execute: false
		},

		jq_ui = {
			url:"/bower_components/jquery-ui/themes/smoothness/jquery-ui.css",
			execute: false
		},

		cm = {
			url: "/stylesheets/jquery.contextMenu.css",
			execute: false
		};

	var jquery = {
			url: '/bower_components/jquery/dist/jquery.min.js'
		},

		splash = {
			url: '/js/splash.min.js'
		};

	// start basket localStorage require chain
	// bootstrap css
	basket.require(bs).then(requireCSS)

	// main css
	.then(function () {
		basket.require(maincss).then(requireCSS);
	})

	// jquery, arrive.js
	.then(function () {
		basket.require(jquery, splash)

		.then(function () {
			console.log('done');
			// remove loading effects
			$('#player,#library').css('filter', 'blur(0px)');
			$('.l-wrapper').hide();
		});
	});

</script>
